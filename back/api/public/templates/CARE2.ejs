    }

    th.normal {
      font-weight: initial;
    }

    table.tabla {
      table-layout: fixed;
      border-collapse: collapse;
      cellspacing: 0;
      cellpadding: 0;
      width: 18.4cm;
    }

    .mantcuadro {
      width: 24.5%;
