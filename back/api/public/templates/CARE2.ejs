    <br />
    <div class="titulo">CONTRATO DE MANTENIMIENTO CARE 2</div>
    <div class="subtitulo">CONDICIONES PARTICULARES</div>
    <!-- Datos del cliente -->
    <div class="texto">
      <p style="font-family: Toyota Display"><strong>DATOS DEL CLIENTE</strong></p>
      <div class="pure-g alt-18">
